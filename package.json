{
  "name": "minista-project",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm run watch:components-export-list & minista --open",
    "build": "npm run generate:components-export-list && minista build",
    "preview": "minista preview",
    "generate:components-export-list": "node lib/generate-components-list.js init",
    "watch:components-export-list": "node lib/generate-components-list.js watch",
    "generate-component": "scaffdog generate --force",
    "biome": "biome check --apply .",
    "stylelint": "stylelint '**/*.css' --config .stylelintrc.json --fix && stylelint '**/*.css' --config .stylelintrc.json",
    "check": "tsc --noEmit -p tsconfig.json && bun biome && bun stylelint && markuplint --config .markuplintrc.yml src/**/*.tsx && prettier -w .",
    "generate:svg-sprite": "bunx svg-sprite --config svg-sprite.json  src/assets/icons/*.svg",
    "view-svg-sprite": "bunx node-static public/assets/icons -i sprite.stack.html"
  },
  "devDependencies": {
    "@biomejs/biome": "1.4.1",
    "@markuplint/jsx-parser": "^3.12.0",
    "@markuplint/react-spec": "^3.13.0",
    "@playwright/test": "^1.40.1",
    "@tsconfig/recommended": "^1.0.3",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "axe-playwright": "^1.2.3",
    "clean-css-cli": "^5.6.3",
    "lefthook": "^1.5.5",
    "markuplint": "^3.15.0",
    "minista": "^3.1.5",
    "postcss-extend": "^1.0.5",
    "prettier": "3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scaffdog": "^3.0.0",
    "stylelint": "^16.1.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/node": "^20.10.5",
    "chokidar": "^3.5.3",
    "htmx.org": "^1.9.10",
    "ts-pattern": "^5.0.6"
  },
  "trustedDependencies": [
    "sharp"
  ]
}
